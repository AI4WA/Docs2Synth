[flake8]
max-line-length = 88
extend-ignore = E203,E266,E501,W503,D100,D101,D102,D103,D104,D105,D107
max-complexity = 15
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .tox,
    docs
per-file-ignores =
    __init__.py:F401,E402
    tests/*:D
