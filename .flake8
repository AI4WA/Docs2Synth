[flake8]
# Black-compatible flake8 configuration
max-line-length = 88
extend-ignore = E203, E266, E501, W503
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .tox,
    docs
per-file-ignores =
    __init__.py:F401
