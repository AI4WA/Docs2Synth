# MCP-specific Dockerfile for Docs2Synth
# This is a lightweight build focused on MCP server functionality

FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        git \
        curl \
        && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copy package files
COPY pyproject.toml README.md ./
COPY docs2synth/ ./docs2synth/

# Install Python package with MCP extras
RUN pip install --upgrade pip && \
    pip install -e .[dev,mcp]

# Create necessary directories
RUN mkdir -p /app/data /app/logs && \
    chmod -R 777 /app/data /app/logs

# Labels
LABEL maintainer="AI4WA"
LABEL description="Docs2Synth MCP Server"

# Expose the port
EXPOSE 8009

# Health check for Streamable-HTTP mode
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f -H "Accept: application/json, text/event-stream" http://localhost:8009/mcp || exit 1

# Default command (can be overridden by docker-compose)
CMD ["docs2synth-mcp", "http", "--host", "0.0.0.0", "--port", "8009", "--path", "/mcp"]
